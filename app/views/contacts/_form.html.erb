<div class="container">
<%= form_for(@contact, :class => "form-horizontal", :id => "contact_form") do |f| %>
    <fieldset>
      <!-- Form Name -->
      <legend>Contact Us!</legend>
      <!-- Text input-->
      <div class="row">       
        <div class="col-xs-12 form-group">  
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
              <%= f.text_field :name, :class => "form-control", :placeholder => "Name", :required=>true%>
            </div>
          </div>
        </div>
      </div>
      <!-- Text input-->
      <div class="row">
        <div class="col-xs-12 form-group"> 
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                <%= f.text_field :email, :class => "form-control", :placeholder => "Email", :required=>true %>
            </div>
          </div>
        </div>
      </div>

      <!-- Text Area -->
      <div class="row">  
        <div class="col-xs-12 form-group">
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                <%= f.text_area :message, :class => "form-control", :placeholder => "Write your message here.", :required=>true%>
              </div>
            </div>
        </div>
      </div>
      <!-- Button -->
      <div class="form-group">
        <label class="col-md-12 control-label"></label>
        <div class="col-md-4">
          <%= f.submit :class => "btn btn-warning", :value => "Send" %>
        </div>
      </div>
   </fieldset>
<% end %>
</div>
